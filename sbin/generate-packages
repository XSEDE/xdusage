PKG=xdusage
VER=$(cat VERSION)
REL=$(cat RELEASE)

HERE=`pwd`
rm -rf ./packages

./sbin/package
cd ./tmp/
./$PKG-$VER/sbin/buildrpm
cd $HERE
mkdir packages
#upload is taking tarball from tmp/xdusage-VER-REL.tgz, let's not confuse the issue
#cp tmp/$PKG-$VER-$REL.tgz ./packages
cp tmp/tmp/xdusagerpmtopdir/RPMS/noarch/xdusage-$VER-$REL.noarch.rpm ./packages
cp tmp/tmp/xdusagerpmtopdir/SRPMS/xdusage-$VER-$REL.src.rpm ./packages
